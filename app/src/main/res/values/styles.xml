<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonTitleStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="CommonLabelStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MoneyInputStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MoneyDisplayStyle" parent="MoneyInputStyle">
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/money_income_text_color</item>
    </style>

</resources>